{% extends 'base_modern.html.twig' %}

{% block title %}Modifier {{ document.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2>✏️ Modifier le document</h2>
                    <form method="post" action="{{ path('document_delete', {'id': document.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.titre) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.auteur) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.type) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.isbn) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.dateAcquisition) }}
                        </div>
                        <div class="mb-3 form-check">
                            {{ form_row(form.disponible) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.resume) }}
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('document_index') }}" class="btn btn-secondary">
                                ← Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}