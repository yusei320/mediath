{% extends 'base.html.twig' %}

{% block title %}Mon Espace Adhérent{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <!-- Sidebar / Menu -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-user-circle me-2"></i> Mon Compte
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('adherent_espace') }}" class="list-group-item list-group-item-action active">
                        <i class="fas fa-tachometer-alt me-2"></i> Tableau de bord
                    </a>
                    <a href="{{ path('adherent_emprunts') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-history me-2"></i> Historique des emprunts
                    </a>
                    <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Déconnexion
                    </a>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="col-md-9">
            <h1 class="mb-4">Bienvenue, {{ adherent.prenom }} {{ adherent.nom }}</h1>

            <!-- Info Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Mes informations</h5>
                    <p class="card-text">
                        <strong>Email :</strong> {{ adherent.email }}<br>
                        <strong>Inscrit le :</strong> {{ adherent.dateInscription|date('d/m/Y') }}<br>
                        <strong>Statut :</strong> 
                        {% if adherent.actif %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-danger">Inactif</span>
                        {% endif %}
                    </p>
                </div>
            </div>

            <!-- Loan Requests -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-inbox me-2"></i> Mes demandes d'emprunt</span>
                    <span class="badge bg-light text-dark rounded-pill">{{ demandes|length }}</span>
                </div>
                <div class="card-body">
                    {% if demandes is empty %}
                        <p class="text-muted text-center my-3">Aucune demande en cours.</p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Document</th>
                                        <th>Bibliothécaire</th>
                                        <th>Date Demande</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for demande in demandes %}
                                        <tr>
                                            <td>{{ demande.document.titre }}</td>
                                            <td>{{ demande.bibliothecaire.email }}</td>
                                            <td>{{ demande.dateDemande|date('d/m/Y') }}</td>
                                            <td>
                                                {% if demande.statut == 'en_attente' %}
                                                    <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half me-1"></i> En attente</span>
                                                {% elseif demande.statut == 'acceptee' %}
                                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i> Acceptée</span>
                                                {% elseif demande.statut == 'refusee' %}
                                                    <span class="badge bg-danger"><i class="fas fa-times me-1"></i> Refusée</span>
                                                    {% if demande.motifRefus %}
                                                        <br><small class="text-danger">{{ demande.motifRefus }}</small>
                                                    {% endif %}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Current Loans -->
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-book-reader me-2"></i> Mes emprunts en cours</span>
                    <span class="badge bg-dark rounded-pill">{{ emprunts_en_cours|length }}</span>
                </div>
                <div class="card-body">
                    {% if emprunts_en_cours is empty %}
                        <p class="text-muted text-center my-3">Vous n'avez aucun emprunt en cours.</p>
                        <div class="text-center">
                            <a href="{{ path('document_index') }}" class="btn btn-outline-primary">
                                <i class="fas fa-search me-2"></i> Parcourir le catalogue
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Document</th>
                                        <th>Emprunté le</th>
                                        <th>Retour prévu</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for emprunt in emprunts_en_cours %}
                                        <tr class="{{ emprunt.statut == 'en_retard' ? 'table-danger' : '' }}">
                                            <td>{{ emprunt.document.titre }}</td>
                                            <td>{{ emprunt.dateEmprunt|date('d/m/Y') }}</td>
                                            <td>
                                                {{ emprunt.dateRetourPrevue|date('d/m/Y') }}
                                                {% if emprunt.statut == 'en_retard' %}
                                                    <br><small class="text-danger fw-bold"><i class="fas fa-exclamation-triangle"></i> EN RETARD</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if emprunt.statut == 'en_retard' %}
                                                    <span class="badge bg-danger">En retard</span>
                                                {% else %}
                                                    <span class="badge bg-warning text-dark">En cours</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
