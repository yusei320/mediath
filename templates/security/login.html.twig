{% extends 'base.html.twig' %}

{% block title %}Connexion - Médiathèque Moderne{% endblock %}

{% block body %}
<section style="min-height: 90vh; display: flex; align-items: center; justify-content: center; padding: 2rem;">
    <div style="width: 100%; max-width: 500px;">
        <!-- Card de connexion avec effet glass -->
        <div class="glass-effect" style="
            padding: 3rem;
            border-radius: 2rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            animation: fadeInUp 0.6s ease;
        ">
            <!-- Header -->
            <div style="text-align: center; margin-bottom: 3rem;">
                <div style="
                    width: 80px;
                    height: 80px;
                    background: linear-gradient(135deg, var(--accent-blue), var(--accent-cyan));
                    border-radius: 1.5rem;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin: 0 auto 1.5rem;
                    font-size: 2rem;
                ">
                    <i class="fas fa-book-reader"></i>
                </div>
                <h2 style="margin-bottom: 0.5rem;">Bienvenue !</h2>
                <p style="color: var(--text-muted);">Connectez-vous pour accéder à votre médiathèque</p>
            </div>

            {% if error %}
                <div style="
                    background: rgba(239, 68, 68, 0.1);
                    border: 1px solid rgba(239, 68, 68, 0.3);
                    color: #ef4444;
                    padding: 1rem;
                    border-radius: 0.75rem;
                    margin-bottom: 2rem;
                    display: flex;
                    align-items: center;
                    gap: 0.75rem;
                ">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            <form method="post">
                <!-- Email -->
                <div style="margin-bottom: 1.5rem;">
                    <label for="inputEmail" style="
                        display: block;
                        margin-bottom: 0.5rem;
                        font-weight: 600;
                        color: var(--text-light);
                    ">
                        <i class="fas fa-envelope" style="margin-right: 0.5rem; color: var(--accent-cyan);"></i>
                        Email
                    </label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="inputEmail"
                        autocomplete="email" 
                        required 
                        autofocus
                        style="
                            width: 100%;
                            padding: 1rem;
                            background: rgba(255, 255, 255, 0.05);
                            border: 1px solid rgba(255, 255, 255, 0.1);
                            border-radius: 0.75rem;
                            color: var(--text-light);
                            font-size: 1rem;
                            transition: all 0.3s ease;
                        "
                        onfocus="this.style.borderColor='var(--accent-blue)'; this.style.background='rgba(255, 255, 255, 0.08)'"
                        onblur="this.style.borderColor='rgba(255, 255, 255, 0.1)'; this.style.background='rgba(255, 255, 255, 0.05)'"
                    >
                </div>

                <!-- Password -->
                <div style="margin-bottom: 2rem;">
                    <label for="inputPassword" style="
                        display: block;
                        margin-bottom: 0.5rem;
                        font-weight: 600;
                        color: var(--text-light);
                    ">
                        <i class="fas fa-lock" style="margin-right: 0.5rem; color: var(--accent-cyan);"></i>
                        Mot de passe
                    </label>
                    <div style="position: relative;">
                        <input 
                            type="password" 
                            name="_password" 
                            id="inputPassword"
                            autocomplete="current-password" 
                            required
                            style="
                                width: 100%;
                                padding: 1rem;
                                background: rgba(255, 255, 255, 0.05);
                                border: 1px solid rgba(255, 255, 255, 0.1);
                                border-radius: 0.75rem;
                                color: var(--text-light);
                                font-size: 1rem;
                                transition: all 0.3s ease;
                            "
                            onfocus="this.style.borderColor='var(--accent-blue)'; this.style.background='rgba(255, 255, 255, 0.08)'"
                            onblur="this.style.borderColor='rgba(255, 255, 255, 0.1)'; this.style.background='rgba(255, 255, 255, 0.05)'"
                        >
                        <button 
                            type="button" 
                            onclick="togglePassword()"
                            style="
                                position: absolute;
                                right: 1rem;
                                top: 50%;
                                transform: translateY(-50%);
                                background: none;
                                border: none;
                                color: var(--text-muted);
                                cursor: pointer;
                                transition: color 0.3s ease;
                            "
                            onmouseover="this.style.color='var(--text-light)'"
                            onmouseout="this.style.color='var(--text-muted)'"
                        >
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- Bouton de connexion -->
                <button 
                    type="submit"
                    class="btn-modern btn-primary"
                    style="
                        width: 100%;
                        justify-content: center;
                        font-size: 1.1rem;
                        margin-bottom: 1.5rem;
                    "
                >
                    <i class="fas fa-sign-in-alt"></i>
                    Se connecter
                </button>

                <!-- Lien mot de passe oublié -->
                <div style="text-align: center;">
                    <a href="#" style="
                        color: var(--accent-cyan);
                        text-decoration: none;
                        font-size: 0.9rem;
                        transition: color 0.3s ease;
                    "
                    onmouseover="this.style.color='var(--accent-blue)'"
                    onmouseout="this.style.color='var(--accent-cyan)'"
                    >
                        Mot de passe oublié ?
                    </a>
                </div>
            </form>
        </div>

        <!-- Info de test -->
        <div style="
            margin-top: 2rem;
            padding: 1.5rem;
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid rgba(59, 130, 246, 0.2);
            border-radius: 1rem;
            text-align: center;
        ">
            <p style="color: var(--text-muted); margin-bottom: 1rem;">
                <i class="fas fa-info-circle" style="color: var(--accent-blue);"></i>
                Comptes de démonstration
            </p>
            <div style="display: grid; gap: 0.75rem; font-size: 0.9rem;">
                <div>
                    <strong style="color: var(--accent-cyan);">Admin:</strong>
                    <code style="
                        background: rgba(255, 255, 255, 0.05);
                        padding: 0.25rem 0.5rem;
                        border-radius: 0.25rem;
                        margin: 0 0.5rem;
                    ">admin@mediatheque.fr</code>
                    <code style="
                        background: rgba(255, 255, 255, 0.05);
                        padding: 0.25rem 0.5rem;
                        border-radius: 0.25rem;
                    ">admin123</code>
                </div>
                <div>
                    <strong style="color: var(--accent-cyan);">User:</strong>
                    <code style="
                        background: rgba(255, 255, 255, 0.05);
                        padding: 0.25rem 0.5rem;
                        border-radius: 0.25rem;
                        margin: 0 0.5rem;
                    ">user@mediatheque.fr</code>
                    <code style="
                        background: rgba(255, 255, 255, 0.05);
                        padding: 0.25rem 0.5rem;
                        border-radius: 0.25rem;
                    ">user123</code>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById('inputPassword');
        const toggleIcon = document.getElementById('toggleIcon');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }
</script>
{% endblock %}
