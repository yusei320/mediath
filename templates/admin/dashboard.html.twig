{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Dashboard{% endblock %}

{% block head_javascript %}
    {{ parent() }}
    {{ importmap('admin') }}
{% endblock %}

{% block main %}
<div class="container-fluid">
    <!-- KPIs -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Documents</h6>
                            <h2 class="mb-0">{{ totalDocuments }}</h2>
                        </div>
                        <i class="fas fa-book fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Adhérents Inscrits</h6>
                            <h2 class="mb-0">{{ totalAdherents }}</h2>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Emprunts</h6>
                            <h2 class="mb-0">{{ totalEmprunts }}</h2>
                        </div>
                        <i class="fas fa-exchange-alt fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Grid -->
    <div class="row">
        <!-- 1. Pie: Documents par Type -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Répartition (Pie Chart)</h6>
                </div>
                <div class="card-body">
                    <div style="height: 300px;">
                        {{ render_chart(chartDocs) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. Horizontal Bar: Emprunts par Statut -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Statut Emprunts (Bar Chart)</h6>
                </div>
                <div class="card-body">
                    <div style="height: 300px;">
                         {{ render_chart(chartLoans) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. Line: Adhésions -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Évolution Adhésions (Line Chart)</h6>
                </div>
                <div class="card-body">
                    <div style="height: 300px;">
                         {{ render_chart(chartAdhesions) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- 4. Column: Disponibilité -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Disponibilité (Column Chart)</h6>
                </div>
                <div class="card-body">
                    <div style="height: 300px;">
                         {{ render_chart(chartAvailability) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
