<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Médiathèque{% endblock %}</title>
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        
        {% block stylesheets %}
            {{ importmap('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="modern-nav">
            <div class="container">
                <a href="{{ path('app_home') }}" class="nav-brand">
                    <i class="fas fa-book-reader"></i>
                    <span>Médiathèque</span>
                </a>
                
                <ul class="nav-links">
                    <li><a href="{{ path('document_index') }}" class="{{ app.request.attributes.get('_route') == 'document_index' ? 'active' : '' }}">Catalogue</a></li>
                    
                    {% if app.user %}
                        {% if is_granted('ROLE_ADHERENT') %}
                            <li><a href="{{ path('adherent_espace') }}" class="{{ app.request.attributes.get('_route') == 'adherent_espace' ? 'active' : '' }}">Mon Espace</a></li>
                        {% endif %}
                        
                        {% if is_granted('ROLE_BIBLIOTHECAIRE') %}
                            <li><a href="{{ path('admin') }}">Administration</a></li>
                        {% endif %}
                        
                        <li>
                            <a href="{{ path('app_logout') }}" class="btn-modern btn-secondary" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('app_login') }}" class="btn-modern btn-primary" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                                Connexion
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <!-- Flash Messages -->
        <div class="container" style="margin-top: 2rem;">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="card badge-{{ label == 'success' ? 'green' : (label == 'danger' ? 'red' : 'blue') }}" style="margin-bottom: 1rem; border-left: 4px solid currentColor;">
                        <i class="fas fa-info-circle"></i> {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="modern-footer">
            <div class="footer-content">
                <div>
                    <h4>Médiathèque</h4>
                    <p style="color: var(--text-muted); line-height: 1.6;">Votre portail culturel.</p>
                </div>
                <div>
                    <h4>Liens</h4>
                    <ul class="footer-links">
                        <li><a href="{{ path('document_index') }}">Catalogue</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Mentions Légales</a></li>
                    </ul>
                </div>
                <div>
                    <h4>Horaires</h4>
                    <p style="color: var(--text-muted);">Lun-Ven: 9h-18h</p>
                    <p style="color: var(--text-muted);">Sam: 10h-17h</p>
                </div>
            </div>
        </footer>
    </body>
</html>
